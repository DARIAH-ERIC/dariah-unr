{
	"name": "@dariah-eric/dariah-unr",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^24"
	},
	"devEngines": {
		"packageManager": [
			{
				"name": "pnpm",
				"version": "^10",
				"onFail": "download"
			},
			{
				"name": "npm",
				"version": "^11",
				"onFail": "error"
			}
		],
		"runtime": {
			"name": "node",
			"version": "^24",
			"onFail": "download"
		}
	},
	"packageManager": "pnpm@10.28.0",
	"scripts": {
		"analyze": "next experimental-analyze",
		"build": "next build --experimental-next-config-strip-types",
		"dev": "next dev --experimental-next-config-strip-types",
		"db:migrations:apply": "dotenvx run -f ./.env.local -- drizzle-kit migrate --config ./config/drizzle.config.ts",
		"db:migrations:generate": "dotenvx run -f ./.env.local -- drizzle-kit generate --config ./config/drizzle.config.ts",
		"db:pull": "dotenvx run -f ./.env.local -- drizzle-kit pull --config ./config/drizzle.config.ts",
		"db:push": "dotenvx run -f ./.env.local -- drizzle-kit push --config ./config/drizzle.config.ts",
		"db:studio": "dotenvx run -f ./.env.local -- drizzle-kit studio --config ./config/drizzle.config.ts",
		"dev:services:down": "docker compose --env-file ./.env.local down --volumes",
		"dev:services:up": "docker compose --env-file ./.env.local up --detach",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "prettier . --cache --cache-location ./.prettiercache --check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:code:fix": "eslint . --fix --flag unstable_native_nodejs_ts_config",
		"lint:styles:check": "stylelint \"./styles/**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "stylelint \"./styles/**/*.css\" --cache --fix --ignore-path ./.gitignore",
		"prepare": "run-s setup types:prepare",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "next start --experimental-next-config-strip-types",
		"test:e2e": "playwright test --config ./e2e/playwright.config.ts",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "pnpm run test:e2e --ui",
		"test:e2e:update-snapshots": "pnpm run test:e2e --update-snapshots",
		"types:check": "tsc --noEmit",
		"types:prepare": "ENV_VALIDATION=\"disabled\" next typegen"
	},
	"dependencies": {
		"@acdh-oeaw/color-schemes": "^0.1.0",
		"@acdh-oeaw/content-lib": "^0.1.4",
		"@acdh-oeaw/keystatic-lib": "^0.8.0",
		"@acdh-oeaw/lib": "^1.0.5",
		"@acdh-oeaw/mdx-lib": "^0.2.0",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@acdh-oeaw/validate-env": "^0.2.1",
		"@citation-js/core": "^0.7.21",
		"@citation-js/plugin-csl": "^0.7.22",
		"@heroicons/react": "^2.2.0",
		"@imgproxy/imgproxy-node": "^1.1.0",
		"@internationalized/date": "^3.10.1",
		"@keystatic/core": "^0.5.48",
		"@keystatic/next": "^5.0.4",
		"@mdx-js/mdx": "^3.1.1",
		"@react-aria/i18n": "^3.12.14",
		"@react-aria/utils": "^3.32.0",
		"@sentry/nextjs": "^10.36.0",
		"@valibot/i18n": "^1.0.0",
		"bcrypt": "^6.0.0",
		"canvas-confetti": "^1.9.4",
		"client-only": "^0.0.1",
		"clsx": "^2.1.1",
		"drizzle-orm": "^1.0.0-beta.9-e89174b",
		"drizzle-valibot": "^1.0.0-beta.9-e89174b",
		"image-dimensions": "^2.5.0",
		"is-network-error": "^1.3.0",
		"lucide-react": "^0.562.0",
		"minio": "^8.0.6",
		"motion": "^12.29.0",
		"next": "^16.1.4",
		"next-intl": "^4.7.0",
		"nodemailer": "^7.0.12",
		"pg": "^8.17.2",
		"react": "^19.2.3",
		"react-aria": "^3.45.0",
		"react-aria-components": "^1.14.0",
		"react-dom": "^19.2.3",
		"react-schemaorg": "^2.0.0",
		"rehype-slug": "^6.0.0",
		"remark-smartypants": "^3.0.2",
		"server-nodejs-only": "^0.0.1",
		"server-only": "^0.0.1",
		"sharp": "^0.34.5",
		"sonner": "^2.0.7",
		"tailwind-merge": "^3.4.0",
		"valibot": "^1.2.0"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.12",
		"@acdh-oeaw/eslint-config-next": "^4.0.6",
		"@acdh-oeaw/eslint-config-node": "^2.0.12",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.14",
		"@acdh-oeaw/eslint-config-react": "^3.0.5",
		"@acdh-oeaw/eslint-config-tailwindcss": "^4.1.3",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.3.2",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@dotenvx/dotenvx": "^1.51.4",
		"@faker-js/faker": "^10.2.0",
		"@next/eslint-plugin-next": "^16.1.4",
		"@playwright/test": "^1.57.0",
		"@react-aria/optimize-locales-plugin": "^1.1.5",
		"@sindresorhus/slugify": "^3.0.0",
		"@tailwindcss/postcss": "^4.1.18",
		"@types/bcrypt": "^6.0.0",
		"@types/canvas-confetti": "^1.9.0",
		"@types/node": "^24.10.9",
		"@types/nodemailer": "^7.0.5",
		"@types/pg": "^8.16.0",
		"@types/react": "^19.2.9",
		"@types/react-dom": "^19.2.3",
		"axe-core": "^4.11.1",
		"axe-playwright": "^2.2.2",
		"babel-plugin-react-compiler": "^1.0.0",
		"drizzle-kit": "^1.0.0-beta.9-e89174b",
		"drizzle-seed": "^1.0.0-beta.9-e89174b",
		"eslint": "^9.39.2",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.1",
		"eslint-plugin-drizzle": "^1.0.0-beta.9-e89174b",
		"eslint-plugin-perfectionist": "^5.4.0",
		"eslint-plugin-unicorn": "^62.0.0",
		"globals": "^17.0.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.7",
		"npm-run-all2": "^8.0.4",
		"null-loader": "^4.0.1",
		"prettier": "^3.8.1",
		"prettier-plugin-embed": "^0.5.1",
		"prettier-plugin-sql": "^0.19.2",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.26.1",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tailwindcss-react-aria-components": "^2.0.1",
		"tsx": "^4.21.0",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"uuid": "^13.0.0"
	},
	"browserslist": {
		"development": [
			"baseline newly available"
		],
		"production": [
			"baseline widely available"
		]
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|tsx)": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
