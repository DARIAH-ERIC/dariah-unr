{
	"name": "@dariah-eric/dariah-unr",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^24"
	},
	"packageManager": "pnpm@10.28.0",
	"scripts": {
		"analyze": "BUNDLE_ANALYZER=\"enabled\" next build --experimental-next-config-strip-types --no-lint --webpack",
		"build": "next build --experimental-next-config-strip-types --webpack",
		"db:client:generate": "dotenv -c development -- prisma generate",
		"db:migrations:apply": "dotenv -c development -- prisma migrate deploy",
		"db:migrations:generate": "dotenv -c development -- prisma migrate dev",
		"db:migrations:reset": "dotenv -c development -- prisma migrate reset --skip-seed",
		"db:push": "dotenv -c development -- prisma db push --force-reset",
		"db:studio": "dotenv -c development -- prisma studio",
		"db:update-password": "dotenv -c development -- tsx ./prisma/update-password.ts",
		"dev": "next dev --experimental-next-config-strip-types --webpack",
		"dev:db": "docker run -d -e POSTGRES_DB=dariah_unr -e POSTGRES_USER=dariah_unr -e POSTGRES_PASSWORD=dariah_unr --name dariah_unr -p 5432:5432 --rm postgres",
		"format:check": "prettier . --cache --check",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup types:prepare db:client:generate",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "next start --experimental-next-config-strip-types",
		"test:e2e": "dotenv -c test -- playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "dotenv -c test -- playwright test --ui",
		"test:e2e:update-snapshots": "dotenv -c test -- playwright test --update-snapshots",
		"types:check": "tsc --noEmit",
		"types:prepare": "ENV_VALIDATION=disabled next typegen"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^1.0.0",
		"@acdh-oeaw/mdx-lib": "^0.1.4",
		"@acdh-oeaw/validate-env": "^0.2.1",
		"@citation-js/core": "^0.7.21",
		"@citation-js/plugin-csl": "^0.7.22",
		"@imgproxy/imgproxy-node": "^1.1.0",
		"@internationalized/date": "^3.10.1",
		"@keystatic/core": "^0.5.48",
		"@keystatic/next": "^5.0.4",
		"@mdx-js/mdx": "^3.1.1",
		"@react-aria/overlays": "3.30.0",
		"@react-aria/utils": "^3.32.0",
		"@react-stately/data": "^3.15.0",
		"@sentry/nextjs": "^10.32.1",
		"@sindresorhus/slugify": "^3.0.0",
		"@tiptap/extension-bold": "^3.15.3",
		"@tiptap/extension-document": "^3.15.3",
		"@tiptap/extension-link": "^3.15.3",
		"@tiptap/extension-paragraph": "^3.15.3",
		"@tiptap/extension-text": "^3.15.3",
		"@tiptap/extensions": "^3.15.3",
		"@tiptap/pm": "^3.15.3",
		"@tiptap/react": "^3.15.3",
		"bcrypt": "^6.0.0",
		"canvas-confetti": "^1.9.4",
		"client-only": "^0.0.1",
		"clsx": "^2.1.1",
		"cva": "^1.0.0-beta.4",
		"dompurify": "^3.3.0",
		"dset": "^3.1.4",
		"fast-glob": "^3.3.3",
		"image-dimensions": "^2.5.0",
		"lucide-react": "^0.552.0",
		"minio": "^8.0.6",
		"next": "^16.1.1",
		"next-intl": "^4.7.0",
		"nodemailer": "^7.0.12",
		"react": "^19.2.3",
		"react-aria-components": "^1.14.0",
		"react-dom": "^19.2.3",
		"react-schemaorg": "^2.0.0",
		"rehype-slug": "^6.0.0",
		"remark-smartypants": "^3.0.2",
		"server-only": "^0.0.1",
		"sharp": "^0.34.4",
		"shiki": "^3.21.0",
		"uuid": "^13.0.0",
		"valibot": "^1.1.0",
		"zod": "^3.25.76"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.12",
		"@acdh-oeaw/eslint-config-next": "^4.0.5",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.14",
		"@acdh-oeaw/eslint-config-react": "^3.0.4",
		"@acdh-oeaw/eslint-config-tailwindcss": "^4.1.2",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.3.2",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@faker-js/faker": "^10.2.0",
		"@mdx-js/loader": "^3.1.1",
		"@next/bundle-analyzer": "^16.1.1",
		"@next/eslint-plugin-next": "^16.1.1",
		"@next/mdx": "^16.1.1",
		"@playwright/test": "^1.56.1",
		"@prisma/client": "^6.19.0",
		"@react-aria/optimize-locales-plugin": "^1.1.5",
		"@react-types/shared": "^3.32.1",
		"@shikijs/rehype": "^3.21.0",
		"@tailwindcss/postcss": "^4.1.16",
		"@tailwindcss/typography": "^0.5.19",
		"@types/bcrypt": "^6.0.0",
		"@types/canvas-confetti": "^1.9.0",
		"@types/hast": "^3.0.4",
		"@types/mdx": "^2.0.13",
		"@types/node": "^24.10.7",
		"@types/nodemailer": "^7.0.5",
		"@types/react": "^19.2.8",
		"@types/react-dom": "^19.2.3",
		"axe-core": "^4.11.1",
		"axe-playwright": "^2.2.2",
		"dotenv-cli": "^11.0.0",
		"eslint": "^9.39.2",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.1",
		"globals": "^16.5.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.6",
		"npm-run-all2": "^8.0.4",
		"prettier": "^3.7.4",
		"prisma": "^6.19.0",
		"prisma-dbml-generator": "^0.12.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-mdx-frontmatter": "^5.2.0",
		"remark-smartypants": "^3.0.2",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.25.0",
		"tailwindcss": "^4.1.16",
		"tailwindcss-animate": "^1.0.7",
		"tailwindcss-react-aria-components": "^2.0.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"browserslist": {
		"development": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|tsx),!./content/**": "prettier --cache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
